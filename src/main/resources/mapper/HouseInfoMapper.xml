<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.HouseInfoMapper">

    <resultMap id="houseInfoMap" type="com.tencent.wxcloudrun.model.HouseInfo">
        <id property="id" column="id"/>
        <result property="longitude" column="longitude"/>
        <result property="latitude" column="latitude"/>
        <result property="address" column="address"/>
        <result property="title" column="title"/>
        <result property="location" column="location"/>
        <result property="area" column="area"/>
        <result property="roomcount" column="roomcount"/>
        <result property="wechat" column="wechat"/>
        <result property="phone" column="phone"/>

    </resultMap>

    <insert id="insertHouseInfo" parameterType="com.tencent.wxcloudrun.model.HouseInfo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `property` (
            `longitude`,
            `latitude`,
            `address`,
            `title`,
            `location`,
            `area`,
            `roomcount`,
            `wechat`,
            `phone`
        )
        VALUES (
                   #{longitude}, #{latitude}, #{address}, #{title}, #{location},
                   #{area}, #{roomcount}, #{wechat}, #{phone}

               )
    </insert>


    <select id="getHouseInfoById" resultMap="houseInfoMap" parameterType="java.lang.Long">
        SELECT *
        FROM `property`
        WHERE id = #{id}
    </select>



</mapper>
